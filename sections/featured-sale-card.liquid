<section class="section-padding-lg">
  <div class="container featured-sale">
    <div class="featured-sale__fancy-border">
      <div class="featured-sale__fancy-border-inner">
        <div class="featured-sale__fancy-border-content">
          {% if section.settings.title != blank %}
          <h1>
            {{ section.settings.title | escape }}
          </h1>
          {% endif %}

          {% if section.settings.subtitle != blank %}
          <h2 class="mb-2 mt-lg-4">
            <i>
              {{ section.settings.subtitle | escape }}
            </i>
          </h2>
          {% endif %}

          {% if section.settings.copy != blank %}
          <p class="mb-4">
            {{ section.settings.copy | escape }}
          </p>
          {% endif %}

          {% if section.settings.link_text != blank and section.settings.link_url != blank%}
          <a
            class="button button__border button--black mb-4 mb-lg-5"
            href="{{ section.settings.link_url | escape }}"
          >
            {{ section.settings.link_text | escape }}
          </a>
          {% endif %}
        </div>

        <div class="featured-sale__images-container">
          <div class="featured-sale__images">
            <div class="featured-sale__col-1">
              {% if section.settings.left_image != blank %}
              <img
                class="featured-sale__image-large"
                src="{{ section.settings.left_image | img_url: 'x700' }}"
                srcset="{{ section.settings.left_image | img_url: 'x1400' }} 2x"
                alt="{{ section.settings.left_image.alt }}"
              />
              {% endif %}
              
              {% if section.settings.use_range != blank %}
              <h5 class="text-dark-gray pr-3">
                {{ section.settings.use_range | escape }}
              </h5>
              {% endif %}
            </div>

            <div class="featured-sale__col-2">
              {% if section.settings.right_image != blank %}
              <img
                class="featured-sale__image-small"
                src="{{ section.settings.right_image | img_url: 'x370' }}"
                srcset="{{ section.settings.right_image | img_url: 'x740' }} 2x"
                alt="{{ section.settings.right_image.alt }}"
              />
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Sale Card",
  "settings": [
    {
      "type": "text",
			"id": "title",
			"label": "Title",
      "default": "Title"
		},
    {
      "type": "text",
			"id": "subtitle",
			"label": "Subtitle",
      "default": "SubTitle"
		},
    {
      "type": "textarea",
			"id": "copy",
			"label": "Copy",
      "default": "Copy"
		},
    {
			"type": "text",
			"id": "link_text",
			"label": "Link Text",
			"default": "Link Text"
		},
    {
			"type": "url",
			"id": "link_url",
			"label": "Link URL"
		},
    {
      "type": "text",
			"id": "use_range",
			"label": "Use Range",
      "default": "Use Range"
		},
    {
      "type": "image_picker",
			"id": "left_image",
			"label": "Left Image"
		},
    {
      "type": "image_picker",
			"id": "right_image",
			"label": "Right Image"
		}
  ],
  "presets": [
    {
      "category": "EFLD - New",
      "name": "Featured Sale Card"
    }
  ]
}
{% endschema %}