<script>
  

  
  
  
  
  
  
      $(document).ready(function (){
    var h2 = $('.saSlider3Each').height()+"px";
    // var css2 = $('.saSlider3Each').attr('style')
    var w2 = $('.saSlider3Each').width()+"px"
    $('.owl-stage-outer').attr('style','--t-width:'+w2+';--t-height:'+h2)
})
    var owl3 = $(".saSlider3");
    owl3.on('changed.owl.carousel', function(event) {
        var item = event.item.index;
        console.log(item)
        switch (item){
            case 0:
                console.log(1)
                $('.saSlider3Each').css('visibility','hidden')
                $('#saSlider3Steper').css('transform',' translateX(0%)')
                $('.saSlider3TextOverlay h2').html('01')
                $('.saSlider3TextOverlay h3').html("{{ section.settings.titleSlide1 }}")
                $('.saSlider3TextOverlay p').html("{{ section.settings.textSlide1 }}")                               
                $('.saTtest').css({'width':'0'})
                setTimeout(function (){
                    $('.saSlider3Each').css('visibility','visible')
                    $('.saTtest').animate({
                        'width':'5000px'
                    },1000)
                },500)
                /*setTimeout(function (){
                    $('.owl-stage-outer').removeClass('fillAfter')
                },500)*/
                break;
            case 1:
                console.log(2)
                $('.saSlider3Each').css('visibility','hidden')


                $('.saTtest').css({'width':'0'})


                $('#saSlider3Steper').css('transform',' translateX(100%)')
                $('.saSlider3TextOverlay h2').html('02')
                $('.saSlider3TextOverlay h3').html("{{ section.settings.titleSlide2 }}")
                $('.saSlider3TextOverlay p').html("{{ section.settings.textSlide2 }}")  
                 setTimeout(function (){
                     $('.saSlider3Each').css('visibility','visible')
                    $('.saTtest').animate({
                        'width':'5000px'
                    },1000)
                },500)

                // $('.owl-stage-outer').addClass('fillAfter')
               /* setTimeout(function (){
                    $('.owl-stage-outer').removeClass('fillAfter')
                },500)*/
                break;
            case 2:
            	$('.saSlider3Each').css('visibility','hidden')
                $('.saTtest').css({'width':'0'})
                $('#saSlider3Steper').css('transform',' translateX(200%)')
                $('.saSlider3TextOverlay h2').html('03')
                $('.saSlider3TextOverlay h3').html("{{ section.settings.titleSlide3 }}")
                $('.saSlider3TextOverlay p').html("{{ section.settings.textSlide3 }}")  
                setTimeout(function (){
                  $('.saSlider3Each').css('visibility','visible')
                    $('.saTtest').animate({
                        'width':'5000px'
                    },1000)
                },500)
                // $('.owl-stage-outer').addClass('fillAfter')
               /* setTimeout(function (){
                    $('.owl-stage-outer').removeClass('fillAfter')
                },500)*/
                break;
        }

    })
    
    
        $(document).ready(function (){
        $('.saSlider3 .owl-dots .owl-dot span').prepend('<div style="width: 7px;height: 7px;background-color: #000;border-radius: 100%"></div>')
    })

  

  
</script>










