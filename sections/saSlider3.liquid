  	}
    .saSlider3Each{
    	height:400px;
    }
    .saSlider3Item3BgPos{
        background-position-x: 66%!important;

    }
  
  }
  
  
  
  
  
  .saSlider3 .owl-dots button{
        outline: none;
    }
    .saSlider3 .owl-dots button span{
        border:none!important;
        width: 25px!important;
        height: 25px!important;
        background-color: transparent!important;
        display: flex!important;
        align-items: center;
        justify-content: center;
        outline: none;
      	margin:0!important;
    }
    .saSlider3 .owl-dots .active span{
        border:1px solid #000!important;
        width: 25px!important;
        height: 25px!important;
        background-color: transparent!important;
        display: flex!important;
        align-items: center;
        justify-content: center;
    }

    .saSlider3Each{
        height: 500px;
        background-size: cover!important;
    }
    .saSlider3 .owl-stage-outer:after{
        content: "";
        width: 0;
        height: 0;
        border-style: solid;
        border-width: var(--t-height) 0 0 var(--t-width);
        border-color: transparent transparent transparent #fff;
        position: absolute;
        top: 0;
    }

    .saTtest{
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0  var(--t-width) var(--t-height) 0;
        border-color: transparent #fff transparent transparent;
        position: fixed;
        top: 0;
        z-index: 12;
    }
    .saSlider3 .owl-dots{
        justify-content: flex-end;
        display: flex;
        margin-top: 0!important;
    }
    .saSlider3 .owl-dots .owl-dot{
        outline: none;
    }
    .saSlider3SteperWrap{
        top: -20px;
        width: 85%;
        z-index: 3;
        height: 4px;
        display: flex;
        position: relative;
    }
    .saSlider3SteperWrap:after{
        width: 100%;
        height: 2px;
        background-color: #E0E0E0;
        content: "";
        position: absolute;
        bottom: 0;
    }
    .saSlider3SteperWrap #saSlider3Steper{
        flex-grow: 1;
        background-color: #000;
        border-radius: 35%;
    }
    .saSlider3TextOverlay{
        position: absolute;
        top: 0;
        z-index: 15;
        height: 100%;
        width: 100%;
        flex-direction: column;
        justify-content: center;
    }
    .saSlider3TextOverlay h2{
        font-size: 48px;
        font-weight: 900;
        color: #000;
        margin: 0;
    }
    .saSlider3TextOverlay h3{
        font-size: 32px;
        font-weight: 900;
        color: #000;
        margin: 20px 0;
    	text-transform: uppercase;

    }
    .saSlider3TextOverlay p{
        font-size: 16px;
        line-height: 30px;
        color: #000;
        margin: 0;
    }
      .saSlider3TextOverlay a{
        width: 160px;
        height: 50px;
        background-color: #000;
        font-family: 'Roboto Condensed', sans-serif;
        font-size: 16px;
        font-weight: 400;
        border: 1px solid transparent;
        color: #fff;
        text-transform: uppercase;
    	border-radius: 2px;
        display: flex;
    	align-items: center;
    	justify-content:center;
        margin-top:30px
    }
  

  	
  
  
    .saSlider3TextOverlay a svg{
      transform: translateX(5px);
       transition: 0.5s all ease;

  	}
  	.saSlider3TextOverlay a:hover svg{
      	transform: translateX(10px);
    }
  	.saSlider3TextOverlay a:hover{
      	background-color:rgba(0,0,0,0.8);
      	color:#fff;
      	transition: 0.5s all ease;
  	}
  
</style>





