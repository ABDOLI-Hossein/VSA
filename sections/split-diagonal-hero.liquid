<style>
  #shopify-section-{{section.id}} .story-slant {
    background-image: url('{{ section.settings.mobile_image | img_url: 'x1200' }}');
  }

  @media (min-width: 767px) {
    #shopify-section-{{section.id}} .story-slant {
      background-image: url('{{ section.settings.desktop_image | img_url: 'x1200' }}');
    }
  }
</style>

<section  
  class="story-slant" 
>
    <div class="container">
      {% if section.settings.title != blank %}
      <h1 class="story-slant__title text-white">
        {{ section.settings.title | escape }}
      </h1>
      {% endif %}

      {% if section.settings.copy != blank %}
      <div class="story-slant__slant-excerpt text-white">
        {{ section.settings.copy }}
      </div>
      {% endif %}
      
      {% if section.settings.link_text != blank and section.settings.link_url != blank %}
      <a
        class="button button__border button--white story-slant__button"
        href="{{ section.settings.link_url | escape }}"
      >
        {{ section.settings.link_text | escape }}
      </a>
      {% endif %}
    </div>
</section>

{% schema %}
{
  "name": "Split Diagonal Hero",
  "settings": [
    {
      "type": "text",
			"id": "title",
			"label": "Title",
			"default": "Title"
    },
    {
      "type": "richtext",
			"id": "copy",
			"label": "Copy"
    },
    {
			"type": "text",
			"id": "link_text",
			"label": "Link Text",
      "default": "Tell Me More"
		},
    {
			"type": "url",
			"id": "link_url",
			"label": "Link URL"
		},
    {
      "type": "image_picker",
		  "id": "desktop_image",
		  "label": "Desktop Image"
		},
    {
      "type": "image_picker",
		  "id": "mobile_image",
		  "label": "Mobile Image"
		}
  ],
  "presets": [
    {
	  	"category": "EFLD - New",
	  	"name": "Split Diagonal Hero",
      "settings": {
        "title": "", 
        "copy": "",
        "link_text": "",
        "link_url": "",
        "desktop_image": "",
        "mobile_image": ""
      }
    }
  ]
}
{% endschema %}