<section class="split-hero">
  <div class="split-hero__right-column">
    {% if section.settings.accent_image != blank %}
    <img
      class="split-hero__right-column__image"
      src="{{ section.settings.accent_image | img_url: 'x570' }}"
      srcset="{{ section.settings.accent_image | img_url: 'x1140' }} 2x"
      alt="{{ section.settings.accent_image.alt }}"
    />
    {% endif %}
  </div>

  <div class="split-hero__left-column" style="background-image: url('{{ 'vintage-state-apparel-hero-text.svg' | asset_url }}')">
    <div class="split-hero__left-column__inner">
      {% if section.settings.product_image != blank %}
      <img
        class="split-hero__product-image"
        src="{{ section.settings.product_image | img_url: 'x350' }}"
        srcset="{{ section.settings.product_image | img_url: 'x700' }} 2x"
        alt="{{ section.settings.product_image.alt }}"
      />
      {% endif %}

      {% if section.settings.title != blank %}
      <h2 class="text-white mt-4">
        {{ section.settings.title | escape }}
      </h2>
      {% endif %}

      {% if section.settings.copy != blank %}
      <p class="mt-2 mb-4">
        {{ section.settings.copy | escape }}
      </p>
      {% endif %}

      {% if section.settings.link_text != blank and section.settings.link_url != blank%}
      <a 
        class="button button__border button--white" 
        href="{{ section.settings.link_url | escape }}"
      >
        {{ section.settings.link_text | escape }}
      </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
	"name": "Split Hero",
	"settings": [
    {
      "type": "image_picker",
			"id": "product_image",
			"label": "Product Image"
		},
    {
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Title"
		},
		{
			"type": "textarea",
			"id": "copy",
			"label": "Copy",
			"default": "Copy"
		},
    {
			"type": "text",
			"id": "link_text",
			"label": "Link Text",
			"default": "Link Text"
		},
    {
			"type": "url",
			"id": "link_url",
			"label": "Link URL"
		},
    {
			"type": "image_picker",
			"id": "accent_image",
			"label": "Accent Image"
		}
	],
	"presets": [
    {
		  "category": "EFLD - New",
		  "name": "Split Hero",
      "settings": {
        "product_image": "",
        "title": "",
			  "copy": "",
        "link_text": "",
        "link_url": "",
        "accent_image": ""
      }
	  }
  ]
}
{% endschema %}
