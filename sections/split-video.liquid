<section class="section-padding-md">
  <div class="container">
    <div class="row justify-content-between align-items-center">
      <div class="col-12 col-lg-4">
        {% if section.settings.title != blank %}
        <h1> 
          {{ section.settings.title }}
        </h1>
        {% endif %}

        {% if section.settings.copy != blank %}
        <div class="mt-3 mb-4">
          {{ section.settings.copy }}
        </div>
        {% endif %}

        {% if section.settings.link_text != blank and section.settings.link_url != blank%}
        <a 
          class="button button__border button--black" 
          href="{{ section.settings.link_url | escape }}"
        >
          {{ section.settings.link_text | escape }}
        </a>
        {% endif %}
      </div>
      
      {% if section.settings.video_url != blank %}
      <div class="col-12 col-lg-7 mt-5 mt-lg-0">
        <div>
          {% if section.settings.video_url.type == "youtube" %}
            <iframe
              class="iframe"
              src="https://www.youtube.com/embed/{{ section.settings.video_url.id | escape }}"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          {% elsif section.settings.video_url.type == "vimeo" %}
            <div class="iframe-vimeo-video-wrapper">
              <iframe 
                class="iframe"
                src="https://player.vimeo.com/video/{{ section.settings.video_url.id | escape }}" 
                allow="autoplay; fullscreen; picture-in-picture" 
                allowfullscreen
              ></iframe>
            </div>
          {% endif %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
	"name": "Split Video",
	"settings": [
    {
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Title"
		},
		{
			"type": "richtext",
			"id": "copy",
			"label": "Copy"
		},
    {
			"type": "text",
			"id": "link_text",
			"label": "Link Text",
			"default": "Link Text"
		},
    {
			"type": "url",
			"id": "link_url",
			"label": "Link URL"
		},
    {
      "type": "video_url",
      "id": "video_url",
      "label": "Video URL",
      "accept": ["youtube", "vimeo"]
    }
	],
	"presets": [
    {
		  "category": "EFLD - New",
		  "name": "Split Video",
      "settings": {
        "title": "",
			  "copy": "",
        "link_text": "",
        "link_url": "",
        "video_url": ""
      }
	  }
  ]
}
{% endschema %}
